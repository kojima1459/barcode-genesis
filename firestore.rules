rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーデータ: 本人のみ読み取り可能。書き込みは表示名と写真URLのみ許可。
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // credits, xp, level などの重要データは書き込み禁止
      allow write: if request.auth != null && request.auth.uid == userId 
                   && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL']);
      
      // ロボットデータ: 読み取りのみ (更新はFunctions経由)
      match /robots/{robotId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // REF: S1
      }

      // インベントリ: 読み取りのみ (更新はFunctions経由)
      match /inventory/{itemId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }

      // スキャン日次状態: 読み取りのみ (更新はFunctions経由)
      match /scanDaily/{dateKey} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }

      // 台帳ログ: 読み取りのみ (更新はFunctions経由)
      match /ledger/{eventId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }

      // ミッション: 読み取りのみ (更新はFunctions経由)
      match /missions/{dateKey} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }

      // バリアント(派生機): 読み取りのみ (更新はFunctions経由)
      match /variants/{variantId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // REF: S1
      }

      // バトル結果履歴: 読み取りのみ (更新はFunctions経由)
      match /battleResults/{battleId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }
    }

    // 公開プロフィール/フォロー: 読み取り可、書き込みはFunctionsのみ
    match /publicUsers/{publicUserId} {
      allow read: if true;
      allow write: if false;

      match /followers/{followerId} {
        allow read: if true;
        allow write: if false;
      }

      match /following/{followingId} {
        allow read: if true;
        allow write: if false;
      }
    }
    
    // バトルデータ: 参加者のみ読み取り可能、書き込みはCloud Functionsのみ
    match /battles/{battleId} {
      allow read: if request.auth != null && (
        resource.data.playerId == request.auth.uid || 
        resource.data.opponentId == request.auth.uid
      );
      allow write: if false; // Cloud Functionsのみ
    }
    
    // ランキング: 全員読み取り可能、書き込みはCloud Functionsのみ
    match /ranking/{rankingId} {
      allow read: if request.auth != null;
      allow write: if false; // Cloud Functionsのみ
    }
  }
}
